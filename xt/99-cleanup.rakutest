use v6.d;
use Test;
use File::Directory::Tree;
plan 3;

if %*ENV<NoDelete> {
    skip-rest 'NoDelete set in environment';
}
else {
    rmtree 'xt/test-dir';
    rmtree 'xt/config-test';
    rmtree 'xt/make-test';
    nok 'xt/test-dir'.IO ~~ :e, "test directory ｢xt/test-dir｣ deleted";
    nok 'xt/config-test'.IO ~~ :e, "test directory ｢xt/config-test｣ deleted";
    nok 'xt/make-test'.IO ~~ :e, "test directory ｢xt/make-test｣ deleted";
}

done-testing;
